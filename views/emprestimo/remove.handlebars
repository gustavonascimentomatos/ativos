<div class="tought-form-container">
    <h1>Cadastrar Devolução:</h1>
    <form action="/emprestimo/remove" method="POST">
        <input type="hidden" name="ToughtId" value="{{id}}">

    
        <div class="form-control">
            <label for="dataDevolucao">Data do Devolução:</label>
            <input type="date" name="dataDevolucao" placeholder='"Digite o data do emprestimo..."'>
        </div>
        
        <div class="form-control">
            <label for="localizacao">Localização:</label>
            <input type="text" name="localizacao" placeholder='"Digite a localizacao..."'>
        </div>

        <input type="submit" value="Cadastrar Devoçução" id="create-tought">

    </form>
</div>