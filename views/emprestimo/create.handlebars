
<h1>{{id}}</h1>
<div class="tought-form-container">
    <h1>Cadastrar Emprestimo:</h1>
    <form action="/emprestimo/add" method="POST">
        <input type="hidden" name="equipamentoId" value="{{id}}">
        <div class="form-control">
            <label for="usuario">Responsável Atual:</label>
            <select id="option" name="usuario" id="usuario" required>
                <option value="" disabled selected>Selecione um responsável...</option>
                {{#each users}}
                    <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
    
        <div class="form-control">
            <label for="dataEmprestimo">Data do Emprestimo:</label>
            <input type="date" name="dataEmprestimo" placeholder='"Digite o data do emprestimo..."'>
        </div>
        
        <input type="submit" value="Cadastrar Emprestimo" id="create-tought">

    </form>
</div>